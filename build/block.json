{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "lazy-load-block/lazy-load-block",
  "version": "1.4.0",
  "title": "Lazy Load Block",
  "category": "lazy-load",
  "icon": "performance",
  "description": "Bloque que carga contenido (iframes, HTML) solo cuando el usuario hace clic. Ideal para mejorar PageSpeed y Core Web Vitals.",
  "keywords": [
    "lazy",
    "iframe",
    "performance",
    "pagespeed",
    "defer",
    "modal",
    "popup"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "lazy-load-block",
  "attributes": {
    "htmlContent": {
      "type": "string",
      "default": ""
    },
    "triggerType": {
      "type": "string",
      "default": "image",
      "enum": [
        "button",
        "link",
        "image"
      ]
    },
    "triggerText": {
      "type": "string",
      "default": "Cargar contenido"
    },
    "placeholderImage": {
      "type": "string",
      "default": ""
    },
    "showPlayIcon": {
      "type": "boolean",
      "default": true
    },
    "playIconColor": {
      "type": "string",
      "default": "#000000"
    },
    "placeholderText": {
      "type": "string",
      "default": ""
    },
    "showPlaceholder": {
      "type": "boolean",
      "default": false
    },
    "autoLoadOnVisible": {
      "type": "boolean",
      "default": false
    },
    "containerWidth": {
      "type": "string",
      "default": "100%"
    },
    "containerHeight": {
      "type": "string",
      "default": "auto"
    },
    "iframeWidth": {
      "type": "string",
      "default": "100%"
    },
    "iframeHeight": {
      "type": "string",
      "default": "400px"
    },
    "iframeWidthTablet": {
      "type": "string",
      "default": ""
    },
    "iframeHeightTablet": {
      "type": "string",
      "default": ""
    },
    "iframeWidthMobile": {
      "type": "string",
      "default": ""
    },
    "iframeHeightMobile": {
      "type": "string",
      "default": ""
    },
    "aspectRatio": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "16/9",
        "4/3",
        "1/1",
        "9/16",
        "21/9"
      ]
    },
    "allowScripts": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css"
}